{
  "name": "mind-cast",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "build-android": "cd android && ./gradlew assembleRelease && cd .. && react-native run-android --variant=release",
    "lint": "eslint '**/*.js'",
    "lint:fix": "prettier-eslint '**/*.js' --write",
    "test": "jest --watch",
    "flow": "flow"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "16.6.3",
    "react-native": "0.58.4",
    "react-native-fast-image": "^5.1.2",
    "react-native-fs": "2.13.2",
    "react-native-vector-icons": "^6.3.0",
    "react-native-video": "^4.4.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.1",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-transform-flow-strip-types": "^7.2.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.1.0",
    "babel-plugin-root-import": "^6.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-native": "^3.6.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.92.1",
    "husky": "^1.3.1",
    "jest": "24.1.0",
    "lint-staged": "^8.1.3",
    "metro-react-native-babel-preset": "0.51.1",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "react-dom": "^16.8.2",
    "react-test-renderer": "16.6.3",
    "reactotron-react-native": "^2.1.5",
    "reactotron-redux": "^2.1.3",
    "reactotron-redux-saga": "^4.0.0",
    "redux-mock-store": "^1.5.3",
    "sinon": "^7.2.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(spec|test).js"
    ]
  }
}
